{
  "contractName": "MyGameToken",
  "inherits": ["ERC20", "Ownable", "Pausable"],
  "security": {
    "accessControl": ["onlyOwner can mint", "onlyOwner can pause"],
    "invariants": ["totalSupply <= 1000000"]
  },
  "functions": [
    {
      "name": "mint",
      "visibility": "public",
      "modifiers": ["onlyOwner"],
      "params": [
        { "name": "to", "type": "address" },
        { "name": "amount", "type": "uint256" }
      ],
      "checks": [
        "totalSupply() + amount <= 1000000"
      ]
    },
    {
      "name": "burn",
      "visibility": "public",
      "params": [
        { "name": "amount", "type": "uint256" }
      ]
    }
  ]
}
